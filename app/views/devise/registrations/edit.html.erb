<h2><%= t('devise.edit_user') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('devise.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('devise.email') %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t('devise.password') %> <i><%= t('devise.leave_blank') %></i><br />
    <%= f.password_field :password, autocomplete: t('devise.new-password') %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %><%= t('devise.min') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: t('devise.new-password') %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('devise.curr_password') %> <i><%= t('devise.we_need') %></i><br />
    <%= f.password_field :current_password, autocomplete: t('devise.curr_password') %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.update') %>
  </div>
<% end %>


<p> <%= button_to t('devise.cancel'), registration_path(resource_name), data: { confirm: t('devise.sure') }, method: :delete %></p>

<%= link_to t('devise.back'), :back %>
