<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: t('devise.sign_up'), url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= t :devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('devise.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('devise.email'), value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.resend_confirmation') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
