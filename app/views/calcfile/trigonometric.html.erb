<div id="explicit__container">
  <%= form_with id: 'explicit__form', method: :get, url: calc_ajaxtrig_path do |form| %>
    <%= form.label(:number, t('main.enternumber')) %>
    <%= form.text_field :number %><br>
    <div class="row">
    <div class="col-6">
      <%= form.radio_button(:trig, "sin") %>
      <%= form.label :trig_sin, t('main.sin') %><br>
      <%= form.radio_button(:trig, "cos") %>
      <%= form.label :trig_cos, t('main.cos') %><br>
      <%= form.radio_button(:trig, "tg") %>
      <%= form.label :trig_tg, t('main.tan') %><br>
      <%= form.radio_button(:trig, "ctg") %>
      <%= form.label :trig_ctg, t('main.ctg')  %>
    </div>
    <div class="col-6">
    <%= form.radio_button(:trig, "asin") %>
    <%= form.label :trig_asin, t('main.asin')  %><br>
    <%= form.radio_button(:trig, "acos") %>
    <%= form.label :trig_acos, t('main.acos')  %><br>
    <%= form.radio_button(:trig, "atan") %>
    <%= form.label :trig_atan, t('main.atan')  %><br>
    <%= form.radio_button(:trig, "actg") %>
    <%= form.label :trig_actg, t('main.actg')  %>
    </div>
    </div>
    <%= form.submit t ("main.calc"), id:'formSubmit'%>
  <% end %>

  <br><hr>

  <div id="ajax_result">
    <div class="col-8">
      <table class="table thead-light" id="result_table" ></table>
    </div>
  </div>
  <%= link_to t('articles.common.back'),calc_work_path, :class => 'btn btn-light btn-sm' %>
</div>