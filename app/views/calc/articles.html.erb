<h1><%= t('articles.title') %></h1>
<% if current_user.admin %>
  <div class="row"><div class="col-2">
    <%= link_to t('articles.new'), new_article_path,
                :class => 'btn btn-outline-primary btn-sm' %></div> </div>
<%end %>
<div class="row">
  <% @post.each do |post|   %>
    <div class="col-3">
      <%=post.title %><br>

      <%= link_to t('articles.show'), article_path(post), :class => 'btn btn-success btn-sm' %>
      <% if current_user.admin %>
        <%= link_to t('articles.edit'),edit_article_path(post), :class => 'btn btn-warning btn-sm' %>
        <%= link_to t('articles.destroy'), article_path(post), method: :delete,
                    data: { confirm: t('confirm.sure') }, :class => 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  <% end %>
</div>